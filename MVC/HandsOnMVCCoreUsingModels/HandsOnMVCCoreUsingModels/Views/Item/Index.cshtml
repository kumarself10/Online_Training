@model List<HandsOnMVCCoreUsingModels.Models.Item>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>ID</th><th>Name</th><th>Price</th><th>Stock</th><th></th>
        </tr>
        @foreach(var item in Model)
		{
	<tr>
		<td>@item.ItemId</td>
		<td>@item.ItemName</td>
		<td>@item.Price</td>
		<td>@item.Stock</td>
		@*<td><a href="GetItem/@item.ItemId">ViewInfo</a></td>*@
		<td><a asp-action="GetItem" asp-route-Id="@item.ItemId">ViewInfo</a></td>
	</tr>
		}
    </table>
    <a href="Add">Add New</a>
</div>
